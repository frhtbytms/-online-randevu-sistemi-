@model AppointmentSystemFinal.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> Bu randevuyu silmek istediğinizden emin misiniz?
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">@Model.Title</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tarih:</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Saat:</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Müşteri:</dt>
            <dd class="col-sm-9">@Model.Customer?.FullName</dd>

            <dt class="col-sm-3">Durum:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@Model.StatusColor">@Model.StatusDisplay</span>
            </dd>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-3">Açıklama:</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Evet, Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> İptal
    </a>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
