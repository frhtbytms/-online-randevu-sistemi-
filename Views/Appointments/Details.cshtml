@model AppointmentSystemFinal.Models.Appointment

@{
    ViewData["Title"] = "Randevu Detayları";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">@Model.Title</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@Model.StatusColor fs-6">@Model.StatusDisplay</span>
                    </dd>

                    <dt class="col-sm-4">Tarih:</dt>
                    <dd class="col-sm-8">@Model.Date.ToString("dd MMMM yyyy dddd")</dd>

                    <dt class="col-sm-4">Saat:</dt>
                    <dd class="col-sm-8">
                        @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
                        (Süre: @((Model.EndTime - Model.StartTime).TotalMinutes) dakika)
                    </dd>

                    <dt class="col-sm-4">Müşteri:</dt>
                    <dd class="col-sm-8">
                        @Model.Customer?.FullName<br />
                        <small class="text-muted">@Model.Customer?.Email</small>
                    </dd>

                    <dt class="col-sm-4">Atanan Personel:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Staff != null)
                        {
                            @Model.Staff.FullName<br />
                            <small class="text-muted">@Model.Staff.Email</small>
                        }
                        else
                        {
                            <span class="text-muted">Henüz atanmadı</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-4">Açıklama:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.StaffNote))
                    {
                        <dt class="col-sm-4">Personel Notu:</dt>
                        <dd class="col-sm-8">
                            <div class="alert alert-secondary">
                                @Model.StaffNote
                            </div>
                        </dd>
                    }

                    <dt class="col-sm-4">Oluşturulma Tarihi:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                    @if (Model.UpdatedAt != null)
                    {
                        <dt class="col-sm-4">Güncellenme Tarihi:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="mt-3">
            @if (User.IsInRole("Customer") && Model.CustomerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value && Model.Status == "Pending")
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </a>
            }

            @if ((User.IsInRole("Staff") || User.IsInRole("Admin")) && Model.Status == "Pending")
            {
                <a asp-action="ChangeStatus" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-check2-square"></i> Durum Değiştir
                </a>
            }

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
