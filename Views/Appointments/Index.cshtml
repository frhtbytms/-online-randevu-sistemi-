@model IEnumerable<AppointmentSystemFinal.Models.Appointment>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Randevular";
    var userRole = ViewData["UserRole"]?.ToString();
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-4 text-end">
        @if (userRole == "Customer")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Randevu Oluştur
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Henüz randevu bulunmamaktadır.
        @if (userRole == "Customer")
        {
            <a asp-action="Create" class="alert-link">Yeni randevu oluştur</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Başlık</th>
                    
                    @if (userRole != "Customer")
                    {
                        <th>Müşteri</th>
                    }
                    
                    @if (userRole == "Admin")
                    {
                        <th>Personel</th>
                    }
                    
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                        <td>
                            @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                        </td>
                        <td>
                            <strong>@item.Title</strong>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <br />
                                <small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                            }
                        </td>
                        
                        @if (userRole != "Customer")
                        {
                            <td>@item.Customer?.FullName</td>
                        }
                        
                        @if (userRole == "Admin")
                        {
                            <td>@(item.Staff?.FullName ?? "Atanmadı")</td>
                        }
                        
                        <td>
                            <span class="badge bg-@item.StatusColor">@item.StatusDisplay</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar">
                                    Detay
                                </a>
                                
                                @if (userRole == "Customer" && item.Status == "Pending")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                        Sil
                                    </a>
                                }
                                
                                @if (userRole == "Admin")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                        Sil
                                    </a>
                                }
                                
                                @if ((userRole == "Staff" || userRole == "Admin") && item.Status == "Pending")
                                {
                                    <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Durum Değiştir">
                                        Durum
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
