@model AppointmentSystemFinal.Controllers.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Rol Yönetimi";
}

<h2><i class="bi bi-gear"></i> Kullanıcı Rol Yönetimi</h2>

<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Kullanıcı Bilgileri</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Ad Soyad:</dt>
                    <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Kullanıcı Adı:</dt>
                    <dd class="col-sm-9">@Model.UserName</dd>

                    <dt class="col-sm-3">Mevcut Roller:</dt>
                    <dd class="col-sm-9">
                        @if (Model.UserRoles.Any())
                        {
                            @foreach (var role in Model.UserRoles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Rol atanmamış</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Rol Seçimi</h5>
            </div>
            <div class="card-body">
                <form asp-action="ManageRoles" method="post">
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    
                    <div class="mb-3">
                        <label class="form-label">Kullanıcıya atanacak rolleri seçin:</label>
                        @foreach (var role in Model.AllRoles)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       name="selectedRoles" value="@role" 
                                       id="role_@role"
                                       @(Model.UserRoles.Contains(role) ? "checked" : "") />
                                <label class="form-check-label" for="role_@role">
                                    @role
                                    @if (role == "Admin")
                                    {
                                        <small class="text-muted">(Tam yetkili yönetici)</small>
                                    }
                                    else if (role == "Staff")
                                    {
                                        <small class="text-muted">(Personel - randevuları yönetir)</small>
                                    }
                                    else if (role == "Customer")
                                    {
                                        <small class="text-muted">(Müşteri - randevu oluşturabilir)</small>
                                    }
                                </label>
                            </div>
                        }
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>Dikkat:</strong> Bir kullanıcı birden fazla role sahip olabilir.
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Rolleri Kaydet
                        </button>
                        <a asp-action="Users" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning">
                <i class="bi bi-info-circle"></i> Rol Açıklamaları
            </div>
            <div class="card-body">
                <h6><strong>Admin</strong></h6>
                <ul class="small">
                    <li>Tüm kullanıcıları görebilir</li>
                    <li>Rol atayabilir</li>
                    <li>Tüm randevuları yönetebilir</li>
                    <li>Raporları görüntüleyebilir</li>
                </ul>

                <h6 class="mt-3"><strong>Staff (Personel)</strong></h6>
                <ul class="small">
                    <li>Kendisine atanan randevuları görebilir</li>
                    <li>Randevu durumlarını değiştirebilir</li>
                    <li>Personel notu ekleyebilir</li>
                </ul>

                <h6 class="mt-3"><strong>Customer (Müşteri)</strong></h6>
                <ul class="small">
                    <li>Randevu oluşturabilir</li>
                    <li>Kendi randevularını görüntüleyebilir</li>
                    <li>Bekleyen randevularını düzenleyebilir</li>
                    <li>Randevularını iptal edebilir</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
