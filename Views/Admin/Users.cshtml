@model List<AppointmentSystemFinal.Controllers.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2><i class="bi bi-people"></i> Kullanıcı Yönetimi</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Yeni Kullanıcı Ekle
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Tüm Kullanıcılar (@Model.Count)</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Henüz kullanıcı bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Kullanıcı Adı</th>
                            <th>Roller</th>
                            <th>Email Onayı</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.User.FullName</strong>
                                </td>
                                <td>@item.User.Email</td>
                                <td>@item.User.UserName</td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        @foreach (var role in item.Roles)
                                        {
                                            var badgeClass = role switch
                                            {
                                                "Admin" => "bg-danger",
                                                "Staff" => "bg-warning",
                                                "Customer" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Rol atanmamış</span>
                                    }
                                </td>
                                <td>
                                    @if (item.User.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Onaylı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-circle"></i> Onaysız
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="ManageRoles" asp-route-id="@item.User.Id" 
                                           class="btn btn-sm btn-warning" title="Rolleri Yönet">
                                            <i class="bi bi-gear"></i> Roller
                                        </a>
                                        <a asp-action="DeleteUser" asp-route-id="@item.User.Id" 
                                           class="btn btn-sm btn-danger" title="Kullanıcıyı Sil">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
