@model AppointmentSystemFinal.Controllers.UserWithRolesViewModel

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h2><i class="bi bi-trash"></i> Kullanıcı Sil</h2>

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle-fill"></i> 
    <strong>Dikkat!</strong> Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Silinecek Kullanıcı</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad Soyad:</dt>
            <dd class="col-sm-9"><strong>@Model.User.FullName</strong></dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>

            <dt class="col-sm-3">Kullanıcı Adı:</dt>
            <dd class="col-sm-9">@Model.User.UserName</dd>

            <dt class="col-sm-3">Roller:</dt>
            <dd class="col-sm-9">
                @if (Model.Roles.Any())
                {
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-secondary me-1">@role</span>
                    }
                }
                else
                {
                    <span class="text-muted">Rol atanmamış</span>
                }
            </dd>
        </dl>

        <div class="alert alert-warning mt-3">
            <strong>Not:</strong> Kullanıcıyla ilişkili tüm veriler (randevular vs.) de etkilenebilir.
        </div>
    </div>
</div>

<form asp-action="DeleteUser" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.User.Id" />
    <button type="submit" class="btn btn-danger btn-lg">
        <i class="bi bi-trash"></i> Evet, Kullanıcıyı Sil
    </button>
    <a asp-action="Users" class="btn btn-secondary btn-lg">
        <i class="bi bi-x-circle"></i> İptal
    </a>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
