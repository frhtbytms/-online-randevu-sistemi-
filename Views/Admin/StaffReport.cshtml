@model List<AppointmentSystemFinal.Controllers.StaffReportViewModel>

@{
    ViewData["Title"] = "Personel Performans Raporu";
}

<h2><i class="bi bi-person-badge"></i> Personel Performans Raporu</h2>

<hr />

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Personel İstatistikleri</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Sistemde henüz personel bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Personel Adı</th>
                            <th>Email</th>
                            <th class="text-center">Toplam Randevu</th>
                            <th class="text-center">Onaylanan</th>
                            <th class="text-center">Reddedilen</th>
                            <th class="text-center">Bekleyen</th>
                            <th class="text-center">Onay Oranı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var staff in Model)
                        {
                            var approvalRate = staff.TotalAppointments > 0 
                                ? (staff.ApprovedAppointments * 100.0 / staff.TotalAppointments).ToString("F1") 
                                : "0.0";

                            <tr>
                                <td>@counter</td>
                                <td><strong>@staff.StaffName</strong></td>
                                <td>@staff.StaffEmail</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@staff.TotalAppointments</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@staff.ApprovedAppointments</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-danger">@staff.RejectedAppointments</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-warning">@staff.PendingAppointments</span>
                                </td>
                                <td class="text-center">
                                    <strong>@approvalRate%</strong>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- Özet İstatistikler -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h4>@Model.Count</h4>
                            <p class="mb-0">Toplam Personel</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h4>@Model.Sum(s => s.TotalAppointments)</h4>
                            <p class="mb-0">Toplam Randevu</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h4>@Model.Sum(s => s.ApprovedAppointments)</h4>
                            <p class="mb-0">Onaylanan</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h4>@Model.Sum(s => s.PendingAppointments)</h4>
                            <p class="mb-0">Bekleyen</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Report" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Genel Raporlara Dön
    </a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
