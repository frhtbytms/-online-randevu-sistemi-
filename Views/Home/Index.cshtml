@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <h1 class="display-4">Randevu Yönetim Sistemi</h1>
    <p class="lead">Online randevu oluşturma ve yönetim platformu</p>
</div>

<div class="row mt-5">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-calendar-check" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Randevularım</h5>
                    <p class="card-text">Tüm randevularınızı görüntüleyin ve yönetin.</p>
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-primary">
                        Randevulara Git
                    </a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Customer"))
        {
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-plus-circle" style="font-size: 3rem; color: #198754;"></i>
                        <h5 class="card-title mt-3">Yeni Randevu</h5>
                        <p class="card-text">Hızlıca yeni bir randevu oluşturun.</p>
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-success">
                            Randevu Oluştur
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-people" style="font-size: 3rem; color: #dc3545;"></i>
                        <h5 class="card-title mt-3">Kullanıcı Yönetimi</h5>
                        <p class="card-text">Kullanıcıları ve rollerini yönetin.</p>
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-danger">
                            Kullanıcılar
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mt-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-bar-chart" style="font-size: 3rem; color: #ffc107;"></i>
                        <h5 class="card-title mt-3">Raporlar</h5>
                        <p class="card-text">Sistem raporlarını görüntüleyin.</p>
                        <a asp-controller="Admin" asp-action="Report" class="btn btn-warning">
                            Raporlara Git
                        </a>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #6c757d;"></i>
                    <h5 class="card-title mt-3">Profilim</h5>
                    <p class="card-text">Profil bilgilerinizi görüntüleyin ve düzenleyin.</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary">
                        Profile Git
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Giriş Yap</h5>
                    <p class="card-text">Mevcut hesabınızla giriş yapın.</p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                        Giriş Yap
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-plus" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">Kayıt Ol</h5>
                    <p class="card-text">Yeni hesap oluşturun ve randevu almaya başlayın.</p>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg">
                        Kayıt Ol
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> Proje Hakkında</h5>
            <p class="mb-0">
                Bu sistem, <strong>ASP.NET Core 8.0 MVC</strong> ile geliştirilmiş, 
                <strong>Entity Framework Core</strong> ve <strong>SQL Server</strong> kullanılan,
                rol tabanlı yetkilendirme içeren bir randevu yönetim platformudur.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
