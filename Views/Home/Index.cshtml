@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-card mb-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between">
        <div class="mb-3 mb-md-0">
            <span class="hero-chip">Öğrenci Projesi</span>
            <h1 class="display-5 mt-2">Randevu Yönetim Sistemi</h1>
            <p class="lead subtext mb-0">Online randevu oluşturma ve yönetim platformu</p>
        </div>
        <div>
            <a asp-controller="Appointments" asp-action="Index" class="btn btn-primary me-2">Randevular</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Hemen Başla</a>
        </div>
    </div>
</div>

<div class="mb-4">
    <div class="d-flex flex-wrap align-items-center gap-2">
        <span class="pill"><span class="icon-circle"><i class="bi bi-people"></i></span>3 Rol: Admin / Staff / Customer</span>
        <span class="pill"><span class="icon-circle"><i class="bi bi-pencil-square"></i></span>Temel CRUD + Durum değişimi</span>
        <span class="pill"><span class="icon-circle"><i class="bi bi-bar-chart"></i></span>Raporlama ve grafikler</span>
    </div>
</div>

<div class="section-block mb-4">
    <div class="section-title">3 Adımda Başla</div>
    <div class="step-list">
        <div class="step-item">
            <span class="icon-circle"><i class="bi bi-person-plus"></i></span>
            <div>
                <strong>1) Kayıt / Giriş</strong>
                <div class="subtext-sm">Hesap aç veya admin bilgisiyle giriş yap.</div>
            </div>
        </div>
        <div class="step-item">
            <span class="icon-circle"><i class="bi bi-calendar-plus"></i></span>
            <div>
                <strong>2) Randevu Oluştur</strong>
                <div class="subtext-sm">Tarih-saat seç, personel ata, gönder.</div>
            </div>
        </div>
        <div class="step-item">
            <span class="icon-circle"><i class="bi bi-check2-circle"></i></span>
            <div>
                <strong>3) Onay / Yönet</strong>
                <div class="subtext-sm">Personel onaylasın, admin raporu görsün.</div>
            </div>
        </div>
    </div>
</div>

<div class="section-block mb-4">
    <div class="section-title">Roller ve Yetkiler</div>
    <div class="row g-3">
        <div class="col-md-4">
            <div class="role-card">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="icon-circle"><i class="bi bi-shield-lock"></i></span>
                    <h5 class="mb-0">Admin</h5>
                </div>
                <ul>
                    <li>Tüm randevuları görür</li>
                    <li>Kullanıcı ve rol yönetir</li>
                    <li>Raporları inceler</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="role-card">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="icon-circle"><i class="bi bi-clipboard-check"></i></span>
                    <h5 class="mb-0">Staff</h5>
                </div>
                <ul>
                    <li>Atanan randevuları görür</li>
                    <li>Onay / Red verir, not ekler</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="role-card">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="icon-circle"><i class="bi bi-person-heart"></i></span>
                    <h5 class="mb-0">Customer</h5>
                </div>
                <ul>
                    <li>Randevu oluşturur, düzenler, siler</li>
                    <li>Sadece kendi randevularını görür</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-calendar-check" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Randevularım</h5>
                    <p class="card-text">Tüm randevularınızı görüntüleyin ve yönetin.</p>
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-primary">
                        Randevulara Git
                    </a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Customer"))
        {
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-plus-circle" style="font-size: 3rem; color: #198754;"></i>
                        <h5 class="card-title mt-3">Yeni Randevu</h5>
                        <p class="card-text">Hızlıca yeni bir randevu oluşturun.</p>
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-success">
                            Randevu Oluştur
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-people" style="font-size: 3rem; color: #dc3545;"></i>
                        <h5 class="card-title mt-3">Kullanıcı Yönetimi</h5>
                        <p class="card-text">Kullanıcıları ve rollerini yönetin.</p>
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-danger">
                            Kullanıcılar
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mt-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-bar-chart" style="font-size: 3rem; color: #ffc107;"></i>
                        <h5 class="card-title mt-3">Raporlar</h5>
                        <p class="card-text">Sistem raporlarını görüntüleyin.</p>
                        <a asp-controller="Admin" asp-action="Report" class="btn btn-warning">
                            Raporlara Git
                        </a>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #6c757d;"></i>
                    <h5 class="card-title mt-3">Profilim</h5>
                    <p class="card-text">Profil bilgilerinizi görüntüleyin ve düzenleyin.</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary">
                        Profile Git
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Giriş Yap</h5>
                    <p class="card-text">Mevcut hesabınızla giriş yapın.</p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                        Giriş Yap
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-plus" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">Kayıt Ol</h5>
                    <p class="card-text">Yeni hesap oluşturun ve randevu almaya başlayın.</p>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg">
                        Kayıt Ol
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> Proje Hakkında</h5>
            <p class="mb-0">
                Bu sistem, <strong>ASP.NET Core 8.0 MVC</strong> ile geliştirilmiş, 
                <strong>Entity Framework Core</strong> ve <strong>SQL Server</strong> kullanılan,
                rol tabanlı yetkilendirme içeren bir randevu yönetim platformudur.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
